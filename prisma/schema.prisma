generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String                @id @default(cuid())
  name                 String?
  email                String?               @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  role                 UserRole              @default(CLIENT)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  accounts             Account[]
  conversations        Conversation[]
  documents            Document[]
  notifications        Notification[]
  notificationSettings NotificationSettings?
  orders               Order[]
  sessions             Session[]
  profile              UserProfile?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@index([email])
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  phone     String?
  company   String?
  position  String?
  address   String?
  city      String?
  country   String?
  website   String?
  bio       String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id             String               @id @default(cuid())
  userId         String
  serviceName    String
  description    String?
  status         OrderStatus          @default(PENDING)
  priority       OrderPriority        @default(NORMAL)
  amount         Float?
  monthlyAmount  Float?
  oneTimeAmount  Float?
  currency       String?              @default("RUB")
  source         OrderSource          @default(MANUAL)
  calculatorData Json?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  completedAt    DateTime?
  documents      Document[]
  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  statusHistory  OrderStatusHistory[]

  @@index([userId])
  @@index([status])
  @@index([source])
}

model OrderStatusHistory {
  id        String      @id @default(cuid())
  orderId   String
  status    OrderStatus
  comment   String?
  changedBy String?
  createdAt DateTime    @default(now())
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Document {
  id          String   @id @default(cuid())
  userId      String
  orderId     String?
  name        String
  fileName    String
  filePath    String
  fileSize    Int
  mimeType    String
  category    String?
  description String?
  createdAt   DateTime @default(now())
  order       Order?   @relation(fields: [orderId], references: [id])
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([orderId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
}

model NotificationSettings {
  id                 String   @id @default(cuid())
  userId             String   @unique
  emailEnabled       Boolean  @default(true)
  emailOrderUpdates  Boolean  @default(true)
  emailDocumentReady Boolean  @default(true)
  emailReminders     Boolean  @default(true)
  emailPromotions    Boolean  @default(true)
  pushEnabled        Boolean  @default(true)
  pushOrderUpdates   Boolean  @default(true)
  pushDocumentReady  Boolean  @default(true)
  pushReminders      Boolean  @default(true)
  pushPromotions     Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String                @id @default(cuid())
  userId    String?
  title     String?
  flag      String?
  meta      Json?
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  user      User?                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  ConversationMessage[]
}

model ConversationMessage {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

enum UserRole {
  CLIENT
  MANAGER
  ADMIN
}

enum OrderSource {
  MANUAL
  CALCULATOR
  CONTACT
  N8N
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
}

enum OrderPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum NotificationType {
  ORDER_UPDATE
  DOCUMENT_READY
  REMINDER
  SYSTEM
  PROMOTION
}

model Calculation {
  id              String    @id @default(cuid())
  userId          String?
  name            String?
  phone           String?
  email           String?
  businessType    String // "IP" | "OOO"
  taxSystem       String // "USN_6" | "USN_15" | "OSNO" | "PATENT"
  employeesCount  Int       @default(0)
  hasNDS          Boolean   @default(false)
  hasVED          Boolean   @default(false)
  operationsCount Int       @default(0)
  services        Json // Массив выбранных услуг
  surcharges      Json // Надбавки
  breakdown       Json // Детализация расчёта
  totalMonthly    Float // Итоговая стоимость в месяц
  totalOneTime    Float // Разовые платежи
  totalYearly     Float // Годовая стоимость
  viewCount       Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  expiresAt       DateTime? // Можно ограничить срок жизни ссылки

  @@index([userId])
  @@index([email])
  @@index([createdAt])
}

model EmailSchedule {
  id             String            @id @default(cuid())
  recipientEmail String
  recipientName  String?
  templateType   EmailTemplateType
  subject        String
  htmlContent    String
  textContent    String?
  metadata       Json? // Дополнительные данные (расчёт, имя и т.д.)
  scheduledFor   DateTime // Когда отправить
  sentAt         DateTime? // Когда отправлено (null = ещё не отправлено)
  status         EmailStatus       @default(PENDING)
  error          String? // Ошибка при отправке
  attempts       Int               @default(0)
  maxAttempts    Int               @default(3)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([recipientEmail])
  @@index([scheduledFor])
  @@index([status])
  @@index([sentAt])
}

enum EmailTemplateType {
  THANK_YOU // День 0: Спасибо за заявку
  FOLLOW_UP_DAY1 // День 1: Почему выбирают нас
  FOLLOW_UP_DAY3 // День 3: Специальное предложение
  FOLLOW_UP_DAY7 // День 7: Напоминание
  CALCULATION_LINK // Ссылка на расчёт
}

enum EmailStatus {
  PENDING
  SENDING
  SENT
  FAILED
  CANCELLED
}
